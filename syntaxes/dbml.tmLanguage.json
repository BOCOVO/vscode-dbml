{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "DBML",
  "patterns": [
    {
      "include": "#table-block"
    }
  ],
  "repository": {
    "settings": {
      "patterns": [
        {
          "begin": "\\[",
          "end": "\\]",
          "patterns": [
            {
              "include": "#column-settings"
            },
            {
              "include": "#strings"
            },
            {
              "include": "#booleans"
            },
            {
              "include": "#relations"
            },
            {
              "include": "#ref"
            }
          ]
        }
      ]
    },
    "table":         {
      "name": "storage.type.dbml",
      "match": "\\b[tT]able\\b"
    },
    "ref":         {
      "name": "storage.type.dbml",
      "match": "\\b[rR]ef\\b"
    },
    "enum": {
      "name": "storage.type.dbml",
      "match": "\\b[eE]num\\b"
    },
    "indexes": {
      "name": "storage.type.dbml",
      "match": "\\b[iI]ndexes\\b"
    },
    "relations": {
      "name": "support.type.dbml",
      "match": "[<>\\-]"
    },
    "alias": {
      "match": "\\b(as)\\b\\S*\\b",
      "captures": {
        "1": {"name": "keyword.control.dbml"}
      }
    },
    "table-block": {
      "begin": "^([tT]able)\\s+\\S+\\s+(.*)?{",
      "end": "}",
      "beginCaptures": {
        "1": {"name": "storage.type.dbml"},
        "2": {
          "patterns": [
            {
              "include": "#alias"
            }
          ]
        }
      },
      "patterns": [
        {
          "match": "\\s*[a-zA-Z0-9_\\-]* ([a-zA-Z0-0()]*)\\b.*",
          "captures": {
            "1": {"name": "string.other.dbml"}
          }
        }
      ]
    },
    "index-block": {
      "begin": "{",
      "end": "}",
      "patterns": [
        {
          "include": "#settings"
        }
      ]
    },
    "enum-block": {
      "begin": "^[eE]num .* {",
      "end": "}"
    },
    "strings": {
      "name": "string.quoted.single.dbml",
      "begin": "['\"`]",
      "end": "['\"`]",
      "patterns": [
        {
          "name": "constant.character.escape.dbml",
          "match": "\\\\."
        }
      ]
    },
    "booleans": {
      "name": "keyword.control.dbml",
      "match": "\\b(true|false|null)\\b"
    },
    "column-settings": {
      "name": "variable.parameter.dbml",
      "match": "\\b(note|primary key|pk|not null|unique|default|increment)\\b"
    },
    "comment": {
      "name": "comment.line.double-slash",
      "match": "//.*$"
    }
  },
  "scopeName": "source.dbml"
}
