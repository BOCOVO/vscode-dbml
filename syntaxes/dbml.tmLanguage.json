{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "DBML",
  "patterns": [
    {
      "include": "#comment"
    },
    {
      "include": "#table-block"
    },
    {
      "include": "#enum-block"
    }
  ],
  "repository": {
    "settings": {
      "patterns": [
        {
          "begin": "\\[",
          "end": "\\]",
          "patterns": [
            {
              "include": "#column-settings"
            },
            {
              "include": "#strings"
            },
            {
              "include": "#booleans"
            },
            {
              "include": "#relations"
            },
            {
              "include": "#ref"
            }
          ]
        }
      ]
    },
    "relations": {
      "name": "support.type.dbml",
      "match": "[<>\\-]"
    },
    "alias": {
      "match": "\\b(as)\\b[\\w-]*\\s",
      "captures": {
        "1": {"name": "keyword.control.dbml"}
      }
    },
    "table-block": {
      "begin": "(?i)\\s*(table)\\s+[\\w-]+\\s+(.*)?{",
      "end": "}",
      "beginCaptures": {
        "1": {"name": "storage.type.dbml"},
        "2": {
          "patterns": [
            {
              "include": "#alias"
            }
          ]
        }
      },
      "patterns": [
        {
          "include": "#column"
        }
      ]
    },
    "column": {
      "match": "\\s*\\S*\\s*(\\S*)\\b.*",
          "captures": {
            "1": {"name": "string.other.dbml"}
          }
    },
    "index-block": {
      "begin": "{",
      "end": "}",
      "patterns": [
        {
          "include": "#settings"
        }
      ]
    },
    "enum-block": {
      "begin": "(?i)\\s*(enum)\\s+[\\w-]+\\s*{",
      "end": "}",
      "beginCaptures": {
        "1": {"name": "storage.type.dbml"}
      }
    },
    "strings": {
      "name": "string.quoted.single.dbml",
      "begin": "['\"`]",
      "end": "['\"`]",
      "patterns": [
        {
          "name": "constant.character.escape.dbml",
          "match": "\\\\."
        }
      ]
    },
    "booleans": {
      "name": "keyword.control.dbml",
      "match": "\\b(true|false|null)\\b"
    },
    "column-settings": {
      "name": "variable.parameter.dbml",
      "match": "\\b(note|primary key|pk|not null|unique|default|increment)\\b"
    },
    "comment": {
      "name": "comment.line.double-slash",
      "match": "//.*$"
    }
  },
  "scopeName": "source.dbml"
}
